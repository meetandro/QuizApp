@{
    ViewData["Title"] = "Home";
}

<div class="container mt-4">
    <div class="row justify-content-center text-center">
        <div class="col-md-12">
            <div class="card card-custom-dark p-5">
                <div class="card-body">
                    <h1 class="display-1 fw-bolder">Quizly</h1>
                    <div class="h1 fw-light mt-5 mb-5">
                        A simple application for a quick test of knowledge,
                        <br>
                        <p class="mt-2">prioritizing ease of access.</p>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col-md-2">
                            <form asp-controller="Game" asp-action="StartQuiz" method="get">
                                <button type="submit" class="btn-custom-dark border-custom w-100">Take a quiz</button>
                            </form>
                        </div>
                        <div class="col-md-2">
                            <form asp-controller="Player" asp-action="AddPlayer" method="get">
                                <button type="submit" class="btn-custom-dark border-custom w-100">Register</button>
                            </form>
                        </div>
                    </div>
                    <hr class="my-5">
                    <p class="lead">Admin panel and progress tracking included.</p>
                </div>
            </div>
        </div>
    </div>
</div>