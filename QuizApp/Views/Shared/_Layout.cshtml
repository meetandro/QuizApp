<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QuizApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QuizApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css" asp-append-version="true">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-custom-dark border-bottom box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">QuizApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <div class="row">
            <div class="sidebar bg-custom-dark col-md-3 col-lg-2">
                <div class="side-menu">
                    <ul class="nav flex-column">
                        <span class="nav-link text-muted mt-3 mb-2">Home</span>
                        <li class="nav-item">
                            <a class="nav-link text-light d-flex align-items-center" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house fs-4 me-3"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light d-flex align-items-center" asp-controller="Home" asp-action="Privacy">
                                <i class="bi bi-shield-shaded fs-4 me-3"></i> Privacy
                            </a>
                        </li>
                        <span class="nav-link text-muted mt-3 mb-2">Question</span>
                        <li class="nav-item">
                            <a class="nav-link text-light d-flex align-items-center" asp-controller="Question" asp-action="GetAllQuestions">
                                <i class="bi bi-card-list fs-4 me-3"></i> Questions
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light d-flex align-items-center" asp-controller="Question" asp-action="AddQuestion">
                                <i class="bi bi-plus-circle fs-4 me-3"></i> Add Question
                            </a>
                        </li>
                        <span class="nav-link text-muted mt-3 mb-2">Player</span>
                        <li class="nav-item">
                            <a class="nav-link text-light d-flex align-items-center" asp-controller="Player" asp-action="GetAllPlayers">
                                <i class="bi bi-people fs-4 me-3"></i> Players
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light d-flex align-items-center" asp-controller="Player" asp-action="AddPlayer">
                                <i class="bi bi-person-plus fs-4 me-3"></i> Add Player
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-md-9 col-lg-10">
                @RenderBody()
            </div>
        </div>
    </div>

    <footer class="footer">
        <div class="container text-center">
            <span>&copy; 2024 - QuizApp</span> - <a class="link-info" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>