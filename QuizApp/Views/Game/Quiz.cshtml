@model List<Question>
@{
    ViewData["Title"] = "Quiz";
}

<div class="container">
    <div class="col-md-10 mx-auto">
        <div class="quiz-container mt-5 mb-5">
            <form asp-controller="Game" asp-action="SubmitQuiz" method="post">
                <p class="text-muted">Get >70% to succeed</p>
                <div class="form-group mt-3">
                    <label for="playerUsername" class="h4">Username:</label>
                    <input type="text" id="playerUsername" name="PlayerUsername" class="form-control mb-3" />
                </div>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <hr class="my-4">
                    <div class="form-group">
                        <h4>@Model[i].QuestionText</h4>
                    </div>
                    @foreach (var answer in Model[i].Answers)
                    {
                        <div class="form-check">
                            <input type="radio" name="SelectedAnswerIds[@i]" class="form-check-input" value="@answer.Id" />
                            <label class="form-check-label">@answer.AnswerText</label>
                        </div>
                    }
                }
                <button type="submit" class="btn btn-success mt-4">Finish Quiz</button>
            </form>
        </div>
    </div>
</div>